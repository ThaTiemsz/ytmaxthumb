{
	"manifest_version": 2,
	"name": "Larger YouTube Thumbnail",
	"description": "Adds a right-click for the direct link to the maximum resolution of a YouTube video thumbnail.",
	"version": "1.2",
	"background": {
		"scripts": [ "jquery-2.2.3.min.js", "ytmaxthumb.js" ]
	},
	"browser_action": {
		"default_icon": "icon24.png"
	},
	"icons": {
		"16": "icon16.png",
		"48": "icon16.png",
		"128": "icon16.png"
	},
	"permissions": [ "activeTab", "tabs", "contextMenus" ]
}
